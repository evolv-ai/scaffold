{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base", "prettier"],
  "overrides": [
    {
      "files": ["scripts/*.js", "src/local/*.js"],
      "rules": {
        "no-console": ["off"],
        "import/no-extraneous-dependencies": ["off"],
        "no-underscore-dangle": ["off"]
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "import/extensions": ["error", "always"]
  },
  "ignorePatterns": ["scripts/templates", "serve"]
}
