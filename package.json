{
  "name": "scaffold-catalyst",
  "version": "0.2.0",
  "description": "",
  "license": "ISC",
  "author": "richardcowin",
  "contributors": [
    "Charles Robertson <hello@charlesrobertson.io> (http://charlesrobertson.io)"
  ],
  "type": "module",
  "main": "context.js",
  "scripts": {
    "scaffold": "node ./scripts/scaffold.js",
    "del": "rm -rf ./serve ./export",
    "build:rollup": "rollup --config rollup.config.js",
    "build:sass": "node ./scripts/sass-id.js && sass ./src/contexts:./serve --no-source-map",
    "copy:css": "rsync -a --include='*/' --include='*.css' --exclude='*' ./serve/ ./export/.build/",
    "export:yaml": "node ./scripts/export-yaml.js",
    "export:aa": "node ./scripts/export-aa.js",
    "watch:rollup": "rollup --config rollup.config.js --watch",
    "watch:sass": "sass ./src/contexts:./serve --watch",
    "watch:css": "nodemon --quiet --watch ./serve --ext css --exec 'npm run copy:css'",
    "watch:yaml": "nodemon --quiet --watch ./export/.build --ext css,js ./scripts/export-yaml.js",
    "serve": "http-server ./serve --port 8080 --cors --silent",
    "build": "npm-run-all -l -s del build:* copy:css export:*",
    "start": "npm-run-all -l -s del build:* -p watch:* serve"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.20.2",
    "@evolv-delivery/catalyst": "^0.6.4",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "base-64": "^1.0.0",
    "eslint": "^8.32.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "http-server": "^14.1.1",
    "js-yaml": "^4.1.0",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.3",
    "rollup": "^3.13.0",
    "rollup-plugin-copy": "^3.4.0",
    "sass": "^1.54.3"
  }
}